GET     /tips        controllers.TipController.index
GET     /tips/:id    controllers.TipController.show(id: Int)
POST    /tips        controllers.TipController.create
PUT     /tips        controllers.TipController.update
DELETE  /tips/:id    controllers.TipController.delete(id: Int)

GET     /tips/:id/comments  controllers.CommentController.index(id:Int)
GET     /comments/:id       controllers.CommentController.show(id: Int)
POST    /comments           controllers.CommentController.create
DELETE  /comments/:id       controllers.CommentController.delete(id: Int)
